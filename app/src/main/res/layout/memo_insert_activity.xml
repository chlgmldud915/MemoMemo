<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    >
    <RelativeLayout
    	android:id="@+id/titleLayout"
    	android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:background="#ffffffff"
	    >
	    <org.heeyoung.multimemo.common.TitleBackgroundButton
			android:id="@+id/titleBackgroundBtn"
		    android:layout_width="match_parent"
		    android:layout_height="48dp"
		    android:layout_alignParentTop="true"
		    android:text="메모 추가"
		    android:textSize="18dp"
		    android:textStyle="bold"
			android:textColor="#ffffff"
		    />
    </RelativeLayout>
    <LinearLayout
    	android:id="@+id/contentsLayout"
    	android:orientation="vertical"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="4dp"
    	android:layout_marginRight="4dp"
    	android:layout_below="@+id/titleLayout"
    	>
    	<LinearLayout
	    	android:id="@+id/mediaLayout"
	    	android:orientation="horizontal"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="10dp"
	    	android:layout_gravity="center_horizontal"
	    	>
	    	<ImageView
		    	android:id="@+id/insert_photo"
		    	android:layout_width="350dp"
		    	android:layout_height="160dp"
		    	android:src="@drawable/person_add"
		    	android:scaleType="fitCenter"
		    	android:background="#E2E2E2"


		    	/>

		    <LinearLayout
		    	android:orientation="vertical"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_marginLeft="10dp"
		    	android:layout_gravity="center_horizontal"

		    	>

			</LinearLayout>
	    </LinearLayout>
	    <LinearLayout
	    	android:id="@+id/memoLayout"
	    	android:orientation="horizontal"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="10dp"
	    	android:layout_gravity="center_horizontal"
	    	>
	    	<FrameLayout
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	>
		    	<EditText
					android:background="#E2E2E2"
					android:id="@+id/insert_memoEdit"
			    	android:layout_width="350dp"
			    	android:layout_height="160dp"
			    	android:gravity="top"
			    	android:layout_margin="5dp"
			    	android:padding="10dp"
			    	android:textColor="#ff000000"
					android:textSize="18dp"
					android:hint="내용을 입력해주세요"
			    	/>

		    </FrameLayout>
		    <LinearLayout
		    	android:orientation="vertical"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_marginLeft="10dp"
		    	android:layout_gravity="center_horizontal"
		    	>

			</LinearLayout>
	    </LinearLayout>
		<org.heeyoung.multimemo.common.TitleBitmapButton
	    	android:id="@+id/insert_dateBtn"
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="10dp"
	    	android:layout_gravity="center_horizontal"
	    	android:layout_margin="5dp"
			android:textColor="#ffffff"

	    	/>
	</LinearLayout>
    <LinearLayout
    	android:id="@+id/buttonLayout"
    	android:orientation="vertical"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="10dp"
    	android:layout_marginBottom="10dp"
    	android:layout_alignParentBottom="true"
    	>
    	<LinearLayout
	    	android:id="@+id/buttonLayout"
	    	android:orientation="horizontal"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_gravity="center_horizontal"
	    	>
			<org.heeyoung.multimemo.common.TitleBitmapButton
				android:layout_marginLeft="3dp"
				android:id="@+id/insert_saveBtn"
			    android:layout_width="170dp"
			    android:layout_height="48dp"
			    android:text="저장"
			    android:textSize="18dp"
				android:textColor="#ffffff"
				android:background="@drawable/radius"
			    />
			<org.heeyoung.multimemo.common.TitleBitmapButton
				android:layout_marginRight="5dp"
				android:id="@+id/insert_cancelBtn"
			    android:layout_width="170dp"
			    android:layout_height="48dp"
			    android:layout_marginLeft="5dp"
			    android:text="닫기"
			    android:textSize="18dp"
				android:textColor="#ffffff"
				android:background="@drawable/radius"
			    />
		 </LinearLayout>
	</LinearLayout>
</RelativeLayout>
